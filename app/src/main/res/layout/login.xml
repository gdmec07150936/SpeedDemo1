<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/backgrounlog"
        android:background="@drawable/shape_login"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center"
       >
        <ImageView
            android:background="@drawable/shape_yuan_logo"
            android:src="@drawable/login_logo"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="268dp"
        android:layout_height="202dp"
        android:background="@drawable/shape_background_color"
        android:layout_marginTop="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_fragment"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_center"
        android:layout_marginTop="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/loginLayout"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/login_text"
                    android:text="登录"
                    android:textSize="18sp"
                    android:textColor="#2CADEF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/login_view"
                    android:layout_width="50sp"
                    android:layout_height="2dp"
                    android:background="#2CADEF"
                    >
                </View>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/singUp_Layout"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/singUp_text"
                    android:text="注册"
                    android:textSize="18sp"
                    android:textColor="#2CADEF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/singUp_view"
                    android:layout_width="50sp"
                    android:layout_height="2dp"
                    android:background="#2CADEF"
                    ></View>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/demoLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mLogin_Fragment"
            ></FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/other_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <TextView
        android:textColor="#6A6A6A"
        android:textSize="16dp"
        android:text="-------------其他方式登录-------------"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginRight="5dp"
                android:background="#00ffffff"
                android:src="@drawable/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:layout_marginLeft="25dp"
                android:background="#00ffffff"
                android:src="@drawable/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:layout_marginLeft="25dp"
                android:background="#00ffffff"
                android:src="@drawable/weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>